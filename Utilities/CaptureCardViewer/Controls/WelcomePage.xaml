<UserControl
    x:Class="CaptureCardViewer.Controls.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CaptureCardViewer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Margin="40,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock Margin="0,40" FontSize="40">Microsoft Display Capture Tools</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button Margin="0,10,10,10" Padding="15">
                    Start New Generic Capture
                </Button>
                <Button Margin="0,10,10,10" Padding="15">
                    Start New Tanager Capture
                </Button>
                <Button Margin="0,10,10,10" Padding="15">
                    Repro Test Case
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
