    <Window x:Class="CaptureCardViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptureCardViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">
    
    <StackPanel Orientation="Horizontal">
        <StackPanel x:Name="SPanel" Orientation="Vertical" Width="400">
            <Label Content="Predicted Image" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <Image x:Name="PredImage" Stretch="Fill" MinHeight="200" MinWidth="400"/>
            <Button x:Name="lF" Content="Load Framework" Click="loadFramework" Margin="0,26"/>
            <Label Content="Refresh rate" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox x:Name="cbi_ref" SelectionChanged="configurations">
                    <ComboBox.RenderTransform>
                        <TransformGroup>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ComboBox.RenderTransform>
                    <ComboBoxItem Content="60 HZ"/>
                    <ComboBoxItem Content="75 HZ"/>
                </ComboBox>
          
            
            
            <Label Content="Resolution Rate" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox x:Name="cbi_res" SelectionChanged="configurations">
                <ComboBox.RenderTransform>
                    <TransformGroup>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ComboBox.RenderTransform>
                <ComboBoxItem Content="1920x1080"/>
                <ComboBoxItem Content="720x800"/>
            </ComboBox>
            <Image Height="100" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="400">

            <Label Content="Actual Image" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image x:Name="CaptImage" Stretch="Fill" MinHeight="200"/>
            <Button x:Name="dP" Content="Display Properties" Click="displayProperties" Margin="0,26"/>

            <StackPanel Orientation="Horizontal">
                <Menu HorizontalAlignment = "Left" VerticalAlignment = "Top" Width = "517">
                    <MenuItem Header = "Load Framework Components">
                        <MenuItem Header = "Capture Plugin" HorizontalAlignment = "Left" Width = "140" Click = "CapPlgn_Click"/>
                        <MenuItem Header = "Display Manager" HorizontalAlignment = "Left"  Width = "140" Click = "DispMan_Click"/>
                        <MenuItem Header = "Toolbox" HorizontalAlignment = "Left"  Width = "140" Click = "Tlbx_Click"/>
                    </MenuItem>
                </Menu>
            </StackPanel>

        </StackPanel>
        <StackPanel Orientation="Vertical" Width="401" Height="430">
            <Label Content="Properties" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBlock" Height="200" />
            <Button x:Name="cF" Content="Compare Frames" Click="compareFrames_Click" Margin="0,26"/>
        </StackPanel>
        
    </StackPanel>
</Window>
