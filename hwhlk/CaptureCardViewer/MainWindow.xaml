<Window x:Class="CaptureCardViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptureCardViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Background="Gray">
            <Image Name="frameImageViewer" />
        </Border>

        <StackPanel Orientation="Vertical">
            <Button Click="LoadPlugin_Click">Load Plugin</Button>
            <ToggleButton>Connect Monitor</ToggleButton>
            <ToggleButton>Capture Frames</ToggleButton>
        </StackPanel>
        
    </Grid>
</Window>
